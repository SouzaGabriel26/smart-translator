{
  "name": "smart-translator",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm services:up && pnpm wait:services && pnpm prisma migrate dev && next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "biome:check": "biome ci --vcs-use-ignore-file=true .",
    "biome:fix": "biome check --vcs-use-ignore-file=true --write .",
    "docker:compose": "docker compose -f ./infra/docker-compose.yaml",
    "services:up": "pnpm docker:compose --env-file=.env up -d",
    "services:down": "pnpm docker:compose --env-file=.env down",
    "ci:services:up": "pnpm docker:compose --env-file=.env.example up -d",
    "ci:services:down": "pnpm docker:compose --env-file=.env.example down",
    "wait:services": "node --import tsx ./infra/scripts/wait-services.ts",
    "test:watch": "vitest",
    "test": "vitest run"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@google/generative-ai": "0.21.0",
    "@hookform/resolvers": "3.10.0",
    "@prisma/client": "6.3.0",
    "@radix-ui/react-avatar": "1.1.3",
    "@radix-ui/react-checkbox": "1.1.4",
    "@radix-ui/react-dialog": "1.1.6",
    "@radix-ui/react-label": "2.1.1",
    "@radix-ui/react-popover": "1.1.6",
    "@radix-ui/react-separator": "1.1.2",
    "@radix-ui/react-slot": "1.1.1",
    "@radix-ui/react-switch": "1.1.3",
    "@tanstack/react-table": "8.21.2",
    "bcryptjs": "3.0.2",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "jose": "5.9.6",
    "lucide-react": "0.474.0",
    "luxon": "3.6.1",
    "next": "15.1.6",
    "next-themes": "0.4.4",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-hook-form": "7.54.2",
    "slug": "10.0.0",
    "sonner": "1.7.4",
    "tailwind-merge": "3.0.1",
    "tailwindcss-animate": "1.0.7",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@tailwindcss/postcss": "4.1.3",
    "@types/bcryptjs": "3.0.0",
    "@types/luxon": "3.6.2",
    "@types/node": "20",
    "@types/react": "19",
    "@types/react-dom": "19",
    "@types/slug": "5.0.9",
    "postcss": "8",
    "prisma": "6.3.0",
    "tailwindcss": "4.1.3",
    "tsx": "4.19.3",
    "typescript": "5",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.0.5"
  }
}
