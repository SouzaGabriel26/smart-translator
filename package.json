{
  "name": "smart-translator",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm services:up && next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "biome:check": "biome ci --vcs-use-ignore-file=true .",
    "biome:fix": "biome check --vcs-use-ignore-file=true --write .",
    "docker:compose": "docker compose -f ./infra/docker-compose.yaml --env-file=.env",
    "services:up": "pnpm docker:compose up -d",
    "services:down": "pnpm docker:compose down"
  },
  "dependencies": {
    "@prisma/client": "6.3.0",
    "next": "15.1.6",
    "react": "19.0.0",
    "react-dom": "19.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/node": "20",
    "@types/react": "19",
    "@types/react-dom": "19",
    "postcss": "8",
    "prisma": "6.3.0",
    "tailwindcss": "3.4.1",
    "typescript": "5"
  }
}
